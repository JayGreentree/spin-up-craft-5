<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous" />
    <link rel="stylesheet" href="{{ siteUrl }}assets/forms/css/main.css">
    <link rel="stylesheet" href="{{ siteUrl }}/assets/forms/css/docs.css">
    <title> {{ page ? '' : 'd-none' }} {{ siteName }}</title>
    <style type="text/css">
        .navbar-expand-lg, .jumbotron {
            margin-bottom:0;
        }
    </style>
</head>

<body>
    {% if page is not defined %}
    {% set page = "Home" %}
    {% endif %}
    <div class="header">
    <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="{{ siteUrl }}">
            <!--img src="{{ siteUrl }}assets/forms/images/icon.svg" alt="Express Forms Demo"-->
            <span style="color:darkorange">Jay</span>Greentree
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link {{ page == "" ? "active" }}" href="{{ siteUrl }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ page == "manual-macro" ? "active" }}" href="{{ siteUrl }}about">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ page == "automated" ? "active" }}" href="{{ siteUrl }}contact">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ page == "ajax" ? "active" }}" href="{{ siteUrl }}articles">Articles</a>
                </li>
                <li>{{ sprig('_components/livebtn') }}</li>
            </ul>
        </div>
    </nav>
    {% block hero %}
    {% endblock %}
    </div>
        {% block content %}
            
        {% endblock %}
    {% block footer %}
    <div class="navbar footer bg-dark text-white text-center">
        <p class="text-white text-center">&copy; {{ "now"|date('Y') }} {{siteName}}.</p>
    </div>
    {% endblock %}
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="{{ siteUrl }}assets/forms/js/main.js"></script>
    {% block footerJs %}{% endblock %}
</body>

</html>
